# =====================================================
# CANNACONVERTER FRONTEND - ENV EXAMPLE
# =====================================================
# Copy to .env.local and fill in real values
# NEVER commit .env.local to git

# Backend API Proxy (uses 127.0.0.1 to avoid browser HSTS issues)
NEXT_PUBLIC_BACKEND_PROXY=http://127.0.0.1:3001

# Database (SQLite) - Local to frontend/prisma folder
DATABASE_URL="file:./prisma/dev.db"

# NextAuth Configuration
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Stripe Configuration (Test Mode)
# Get your keys at https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_50="price_..."
STRIPE_PRICE_200="price_..."
STRIPE_PRICE_500="price_..."

# Ambiente
NODE_ENV=development

# =====================================================
# REFUND SYSTEM CONFIGURATION
# =====================================================

# Number of days after job creation that a refund can be requested
# Default: 30 days
REFUND_WINDOW_DAYS=30

# Enable automatic refunds for PRE_PROCESS failures
# When true, jobs that fail before processing starts are auto-refunded
# When false, all refund requests require admin approval
AUTO_REFUND=true

# Admin password for refund management endpoints
# Required for /api/admin/refund-requests endpoints
# Generate a strong password: openssl rand -base64 32
ADMIN_PASSWORD="your-admin-password-change-in-production"
