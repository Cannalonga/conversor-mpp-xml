{
  "name": "mpp-xml-converter",
  "version": "2.0.0",
  "description": "Conversor web escalável de arquivos .mpp para .xml com sistema de monetização via PIX",
  "main": "api/server-minimal.js",
  "scripts": {
    "start": "node src/server.js",
    "start:production": "NODE_ENV=production node src/server.js",
    "start:cluster": "NODE_ENV=production CLUSTER_WORKERS=4 node src/server.js",
    "worker": "node src/workers/conversion-worker.js",
    "dev": "nodemon src/server.js",
    "dev:worker": "nodemon src/workers/conversion-worker.js",
    "docker:build": "docker build -f Dockerfile.scalable -t conversor-mpp:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k6:test": "cd infra/k6 && k6 run load-test.js",
    "k6:smoke": "cd infra/k6 && k6 run --vus 10 --duration 5m load-test.js",
    "k6:load": "cd infra/k6 && ./run-tests.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:security": "eslint . --config .eslintrc.security.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "npm run test:unit && npm run test:integration",
    "test:production-health": "curl -f http://localhost:3000/health || exit 1",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "build": "npm ci --only=production",
    "build:docker": "docker build -f Dockerfile.scalable --target production -t conversor-app .",
    "build:worker": "docker build -f Dockerfile.scalable --target worker -t conversor-worker .",
    "setup-dirs": "powershell -Command \"New-Item -ItemType Directory -Force uploads\\incoming, uploads\\processing, uploads\\converted, uploads\\expired, uploads\\quarantine, logs, temp, backups, src\\logs, infra\\prometheus\\data, infra\\grafana\\data\"",
    "cleanup": "node scripts/cleanup.js",
    "syntax-check": "node scripts/syntax-check.js",
    "security-audit": "node scripts/security-audit.js",
    "security-fix": "node scripts/security-fix.js",
    "final-report": "node scripts/final-report.js",
    "doctor": "npm run syntax-check && npm run security:check && npm run security-audit",
    "postinstall": "npm run setup-dirs",
    "prestart": "echo \"Starting Conversor MPP-XML Server...\""
  },
  "keywords": [
    "mpp",
    "xml",
    "converter",
    "microsoft project",
    "pix",
    "payment",
    "monetization"
  ],
  "author": "Seu Nome <seu.email@exemplo.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.63.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "^5.9.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.23",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.1.11"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/mpp-xml-converter.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/mpp-xml-converter/issues"
  },
  "homepage": "https://github.com/seu-usuario/mpp-xml-converter#readme"
}
