{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "timeout": 30,
    "max_upload_size": "50MB",
    "debug": true
  },
  "security": {
    "cors_enabled": true,
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 60
    },
    "allowed_origins": ["*"],
    "allowed_file_types": [".mpp", ".xml"]
  },
  "conversion": {
    "output_format": "xml",
    "encoding": "utf-8",
    "validate_xml": true,
    "sample_mode": true
  },
  "paths": {
    "public": "public",
    "uploads": "uploads",
    "admin": "admin"
  }
}