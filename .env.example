# ==============================================
# EXAMPLE ENVIRONMENT VARIABLES
# ==============================================
# IMPORTANT: Never commit real secrets to repository
# Copy this file to .env and fill with your real values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=3000
NODE_ENV=production

# ==============================================
# ADMIN CREDENTIALS - CHANGE THESE!
# ==============================================
ADMIN_USERNAME=your_admin_username_here
ADMIN_PASSWORD=your_strong_password_here
ADMIN_EMAIL=your_admin_email@example.com

# ==============================================
# PIX PAYMENT CONFIGURATION
# ==============================================
PIX_KEY=your_pix_key_here
PIX_MERCHANT_NAME=Your Business Name
PIX_MERCHANT_CITY=Your City

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your_super_secure_jwt_secret_at_least_64_chars_long
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_SECRET=your_session_secret_here

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=.mpp,.xml

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=5

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=https://your-domain.com

# ==============================================
# DATABASE (if needed)
# ==============================================
DATABASE_URL=your_database_connection_string_here

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Email configuration (if needed)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ==============================================
# DEPLOYMENT SETTINGS
# ==============================================
# SSL settings
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private.key

# Monitoring
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=info