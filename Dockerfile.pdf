# PDF Worker Dockerfile
# Extends base worker with PDF processing capabilities

FROM python:3.11-slim as pdf-worker

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # PDF processing utilities
    poppler-utils \
    tesseract-ocr \
    tesseract-ocr-por \
    # File utilities
    file \
    libmagic1 \
    # Security
    clamav \
    # Cleanup
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# Create app user for security
RUN groupadd -r pdfworker && useradd -r -g pdfworker pdfworker

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install PDF-specific packages
RUN pip install --no-cache-dir \
    PyPDF2==3.0.1 \
    reportlab==4.0.7 \
    pdfplumber==0.10.3 \
    pytesseract==0.3.10 \
    pillow==10.1.0

# Copy application code
COPY app/ ./app/
COPY scripts/ ./scripts/
COPY config/ ./config/

# Create necessary directories with proper permissions
RUN mkdir -p /app/uploads /app/temp /app/logs /tmp/pdf_processing \
    && chown -R pdfworker:pdfworker /app \
    && chown -R pdfworker:pdfworker /tmp/pdf_processing \
    && chmod 755 /app/scripts/*.py

# Environment variables for PDF processing
ENV PDF_TEMP_DIR=/tmp/pdf_processing
ENV PDF_MAX_FILE_SIZE=50MB
ENV PDF_PROCESSING_TIMEOUT=300
ENV TESSERACT_CONFIG="--psm 6"

# Security: limit resources for PDF processes
RUN echo "pdfworker soft nofile 1024" >> /etc/security/limits.conf \
    && echo "pdfworker hard nofile 2048" >> /etc/security/limits.conf \
    && echo "pdfworker soft nproc 50" >> /etc/security/limits.conf \
    && echo "pdfworker hard nproc 100" >> /etc/security/limits.conf

# Switch to non-root user
USER pdfworker

# Health check for PDF worker
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "from app.converters.pdf_extract_text import extract_text_from_pdf; print('âœ… PDF Worker Ready')"

# Worker configuration
ENV CELERY_WORKER_CONCURRENCY=2
ENV CELERY_WORKER_MAX_TASKS_PER_CHILD=50
ENV CELERY_WORKER_PREFETCH_MULTIPLIER=1
ENV CELERY_TASK_ROUTES='{"convert_pdf_text": {"queue": "pdf_queue"}}'

# Expose monitoring port
EXPOSE 5555

# Default command - Celery worker for PDF tasks
CMD ["python", "-m", "celery", "worker", "-A", "app.tasks", "--loglevel=info", "--queues=pdf_queue", "--concurrency=2", "--max-tasks-per-child=50"]