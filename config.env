# =======================
# EXCEL CONVERTER API CONFIGURATION
# =======================

# Application Settings
ENV=development
APP_VERSION=4.0.0
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-for-authentication

# Sentry Configuration (Error Tracking)
# Get your DSN from https://sentry.io/
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Prometheus Configuration
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics

# Database (if using external DB)
DATABASE_URL=sqlite:///./excel_converter.db
# DATABASE_URL=postgresql://user:password@localhost/excel_converter

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
CLEANUP_INTERVAL=3600

# Worker Configuration
WORKER_POOL_SIZE=4
MAX_CONCURRENT_CONVERSIONS=10
CONVERSION_TIMEOUT=300

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# External Services
# PIX_API_URL=your-pix-api-url
# PIX_API_KEY=your-pix-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/excel_converter.log

# =======================
# PRODUCTION OVERRIDES
# =======================
# Set these in production:
# ENV=production
# DEBUG=false
# SECRET_KEY=very-secure-secret-key
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host/prod_db